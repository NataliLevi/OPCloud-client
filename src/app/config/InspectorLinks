import { selectOptions } from './selectOptions';
import { InspectorService } from '../services/inspector.service';

export class inspectorLinks  {
    constructor(private inspectorService: InspectorService) { }

    //From this point defined  the groups that all the inspector parameters are grouped by.
    groupsDefinition = {
        marker: this.inspectorService.CreateGroup('Marker', 1),
        labels: this.inspectorService.CreateGroup('Labels', 2)
    };

    linkDefinition = {
        '.marker-source': this.inspectorService.CreateSelection('select-box', selectOptions.SourceLinkType, 'source link type', 'Marker', 1),
        '.marker-target': this.inspectorService.CreateSelection('select-box', selectOptions.DestLinkType, 'destination link type', 'Marker', 2),
    };

    labelDefinition = [{
        position: this.inspectorService.CreateSelection('select-box', selectOptions.labelPosition, 'Position', 'Labels', 4, '0.5'),
        attrs: {
            text: {
                text: {
                    group: 'Labels',
                    type: 'text',
                    label: 'text',
                    index: 3
                }
            }
        }
    }];
};